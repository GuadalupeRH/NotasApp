@using DataAccessLayer.Entidades
@model List<Nota>

<h2>Notas</h2>
<a href="/Nota/Crear" class="btn btn-primary">Nueva Nota</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Contenido</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nota in Model)
        {
            <tr>
                <td>@nota.Id</td>
                <td>@nota.Contenido</td>
                <td>
                    <a href="/Nota/Editar/@nota.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Nota/Eliminar/@nota.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
